@model SistemaIndexador.Application.ViewModels.DadosIndexacaoViewModel

<div class="modal show " role="dialog" aria-hidden="true" style="background-color: #ffffff; margin:50px 0 0 0 ">
    <div class="card-group">
        <div class="card col-lg-12">
            <div class="modal-dialog " style="width:auto; ">
                <div class="modal-content">
                    <div class="modal-body">
                        Matricula:
                        <input type="text" name="txtMatricula" value="" style="width:100px" />
                        CPF:
                        <input type="text" name="txtCPF" value="" style="width:100px" />
                        Referência:
                        <input type="text" name="txtRef_a" value="" style="width:25px" /> / <input type="text" name="txtRef_b" value="" style="width:100px" />
                        Validade:
                        <input type="text" name="txtRef_b" value="" style="width:100px" />

                    </div>
                </div>
                <div class="modal-content">
                    <div class="modal-body">

                        <div style=" padding: 10px 1px 1px 0 ">
                            Tipo Doc:
                            @{
                                @Html.DropDownListFor(m => m.TipoDocSelected, new SelectList(Model.TipoDoc), "Selecione Tipo de Documento")

                            }
                        </div>
                    </div>
                </div>
                <div class="modal-content">
                    <div class="modal-body">

                        <form method="post" id="uploadForm" enctype="multipart/form-data">
                            <table class="table">
                                <tr>
                                    <td colspan="3">
                                        <legend>Indexadar Arquivos</legend>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="btn btn-secondary">
                                            <input type="file" name="files[]" multiple="multiple" onchange="getFileSizeandName(this);" class="btn btn-secondary" />

                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <div id="uploaddiv">
                                            <table id="uploadTable" class="table">
                                                <thead>
                                                </thead>
                                                <tbody id="tbodyid">
                                                    <tr id="tr1">
                                                        <td id="filetd1"></td>
                                                        <td id="filesizetd1"></td>
                                                    </tr>
                                                    <tr id="tr2">
                                                        <td id="filetd2"></td>
                                                        <td id="filesizetd2"></td>
                                                    </tr>
                                                    <tr id="tr3">
                                                        <td id="filetd3"></td>
                                                        <td id="filesizetd3"></td>
                                                    </tr>
                                                    <tr id="tr4">
                                                        <td id="filetd4"></td>
                                                        <td id="filesizetd4"></td>
                                                    </tr>
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td id="filecount"></td>
                                                        <td id="totalsize"></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <button class="btn btn-primary" type="submit" id="tbnEnviarArquivos">Indexar</button>
                                        <button class="btn" id="cancelButton">Cancel</button>
                                    </td>
                                </tr>
                            </table>


                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">
    var select = $('#uploadTable');

    function getFileSizeandName(input) {
        select = $('#uploadTable');
        for (var i = 0; i < input.files.length; i++) {
            var filesizeInBytes = input.files[i].size;
            var filesizeInMB = (filesizeInBytes / (1024 * 1024)).toFixed(2);
            var filename = input.files[i].name;


            if (i <= 4) {
                $('#filetd' + i + '').text(filename);
                $('#filesizetd' + i + '').text(filesizeInMB);
            }
            else if (i > 4) {
                select.append($('<tr id=tr' + i + '><td id=filetd' + i + '>' + filename + '</td><td id=filesizetd' + i + '>' + filesizeInMB + '</td></tr>'));
            }
        }
    }

    $(document).ready(function () {
        $('#tbnEnviarArquivos').on('click', function () {
            var data = new FormData();
            var files = $('[type="file"]').get(0).files;

            for (var i = 0; i < files.length; i++) {
                data.append("file", files[i]);
            }

            $.ajax({
                type: "POST",
                url: "\\Home\\upload",
                type: 'POST',
                data: data,
                cache: false,
                contentType: false,
                processData: false,
                success: function (data) {
                    //show content
                    alert('Success!')
                }
            });
        })
    });



</script>
