@model SistemaIndexador.Application.ViewModels.TabelaRegrasDMSViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizar";
}
<br />
@using (Html.BeginForm("Visualizar", "TabelaRegrasDMS", FormMethod.Get))
{
    <div class="container-fluid" style="max-width: 100%;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" style="text-transform: uppercase;"><a href="#">Tabela de Preço</a></li>
                <li class="breadcrumb-item active" style="text-transform: uppercase;" aria-current="page">Detalhes</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-8">
                <div>
                    <div class="pull-left">
                        <a class="btn btn-primary" href="@Url.Action("Index", "TabelaRegrasDMS")">
                            <span title="Detalhes" class="glyphicon glyphicon-menu-left"></span>
                            Voltar
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div>
            <form>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.Id)
                    @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.CodGrupo)
                    @Html.TextBoxFor(model => model.CodGrupo, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group col-lg-6">
                    @Html.DisplayNameFor(model => model.DescricaoOutrosDocs)
                    @Html.TextBoxFor(model => model.DescricaoOutrosDocs, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.Regra)
                    @Html.TextBoxFor(model => model.Regra, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.Infotipo)
                    @Html.TextBoxFor(model => model.Infotipo, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.Subinfotipo)
                    @Html.TextBoxFor(model => model.Subinfotipo, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.Obrigatorio)
                    @Html.TextBoxFor(model => model.Obrigatorio, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.GrupoAutorizacoes)
                    @Html.TextBoxFor(model => model.GrupoAutorizacoes, new { @class = "form-control", @readonly = "true" })
                </div>

            </form>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div>
                    <div class="pull-left">
                        <a class="btn btn-primary" href="@Url.Action("Index", "TabelaRegrasDMS")">
                            <span title="Detalhes" class="glyphicon glyphicon-menu-left"></span>
                            Voltar
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </div>

}

<style>
    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #ffffff;
        padding-left: 10px !important;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 22%;
        border: 0px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>
